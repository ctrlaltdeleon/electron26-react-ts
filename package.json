{
  "name": "electron-react-ts",
  "version": "0.1.0",
  "private": true,
  "description": "Electron + React + TypeScript + electron-builder boilerplate",
  "engines": {
    "node": "18.x"
  },
  "main": "dist/electron/electron.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron:build\" \"npm run dev:electron\"",
    "dev:electron": "wait-on tcp:5173 dist/electron/electron.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev:electron:build": "tsc -p tsconfig.electron.json -w --preserveWatchOutput",
    "dev:renderer": "vite --config vite.config.mts",
    "build": "npm run build:renderer && npm run build:electron",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:renderer": "vite build --config vite.config.mts",
    "dist": "npm run build && electron-builder",
    "dist:all": "npm run build && electron-builder -lwm",
    "dist:linux": "npm run build && electron-builder --linux",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.2",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "18.19.0",
    "@types/react": "19.0.0",
    "@types/react-dom": "19.0.0",
    "@vitejs/plugin-react": "5.0.0",
    "@vitest/ui": "3.2.4",
    "concurrently": "9.0.0",
    "cross-env": "7.0.3",
    "electron": "26.0.0",
    "electron-builder": "25.0.0",
    "electronmon": "2.0.0",
    "jsdom": "26.1.0",
    "shx": "0.4.0",
    "typescript": "5.4.5",
    "vite": "5.0.0",
    "vitest": "3.2.4",
    "wait-on": "8.0.0"
  },
  "build": {
    "appId": "com.example.electronreactts",
    "productName": "ElectronReactTS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "linux": {
      "category": "Development",
      "target": [
        "AppImage",
        "deb"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
