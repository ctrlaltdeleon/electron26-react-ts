{
  "name": "electron26-react-ts",
  "version": "0.1.0",
  "private": true,
  "description": "Electron 26 + React + TypeScript + electron-builder boilerplate",
  "main": "dist/main/main.js",
  "scripts": {
    "dev:renderer": "vite",
    "dev:electron:build": "tsc -p tsconfig.electron.json -w --preserveWatchOutput",
    "dev:electron": "wait-on tcp:5173 dist/main/main.js && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:electron:build\" \"npm run dev:electron\"",
    "build:renderer": "vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build": "npm run build:renderer && npm run build:electron",
    "dist": "npm run build && electron-builder",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "devDependencies": {
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "electron": "26.0.0",
    "electron-builder": "^25.0.0",
    "electronmon": "^2.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "build": {
    "appId": "com.example.electron26reactts",
    "productName": "Electron26ReactTS",
    "files": [
      "dist/**/*",
      "dist/renderer/**/*"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
